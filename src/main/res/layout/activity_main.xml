<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/invitation"
        android:text="@string/invitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:fontFamily="@font/architex"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/colorslogan2" />

    <ImageView
        android:id="@+id/krakow"
        android:src="@drawable/krakow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:scaleType="center"
        android:contentDescription="@string/content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/warsaw2"
            android:src="@drawable/warsaw2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            android:contentDescription="@string/content2" />

        <ImageView
            android:id="@+id/warsaw1"
            android:src="@drawable/warsaw1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:scaleType="center"
            android:contentDescription="@string/content1" />

    </LinearLayout>

    <TextView
        android:id="@+id/greetings"
        android:text="@string/greetings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:fontFamily="@font/architex"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorslogan2" />

</LinearLayout>