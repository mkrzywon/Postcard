<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/standard"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/krakow"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content"
                android:src="@drawable/krakow" />

            <ImageView
                android:id="@+id/warsaw2"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/content2"
                android:scaleType="fitCenter"
                android:src="@drawable/warsaw2" />

            <ImageView
                android:id="@+id/warsaw1"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/content1"
                android:scaleType="fitCenter"
                android:src="@drawable/warsaw1" />

        </LinearLayout>

        <TextView
            android:id="@+id/invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/architex"
            android:text="@string/invitation"
            android:textAlignment="textStart"
            android:textColor="@color/colorslogan2"
            android:textSize="@dimen/header_text_landscape"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/standard"
            android:fontFamily="@font/architex"
            android:text="@string/greetings"
            android:textColor="@color/colorslogan2"
            android:textSize="@dimen/header_text_landscape"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>